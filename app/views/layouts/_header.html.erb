				<% unless params[:controller] == 'pages' and params[:action] == 'index' %>

					<%= form_for @search do |f| %>
						<div class="input-sm">
							<%= f.text_field :name, class: "form-control input-sm", placeholder: "Find something you want!" %>
							<span class="input-group-btn">
							<%= button_tag(type: "submit", class: "btn btn-default btn-sm") do %>
							<span class="glyphicon glyphicon-search"></span>
							<% end %>
