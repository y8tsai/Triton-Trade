      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, autofocus: true %><br>
    
    <%= f.label :condition %><br>
    <%= f.text_field :condition, autofocus: true %><br>

