    <%= f.label :description %><br>
    <%= f.text_area :description %><br>

    <%= f.label :image_url %><br>
    <%= f.text_field :image_url, autofocus: true %><br>

    <%= f.label :price %><br>
    <%= f.number_field :price, :class => 'text_field', :step => 'any', autofocus: true %><br>

    <%= f.label :all_tags %><br>
    <%= f.text_field :all_tags, placeholder: "Tags separated with ," %><br>
    
