<head>
	<style>
		body h1 { font-family: "Oswald", sans-serif; text-transform: uppercase; }
		.pic { float: left; padding-right: 10px; }
		.iteminfo li { list-style: none; display: block; }
		.buy { padding: 5px; }	
	</style>
</head>

<%= render 'shared/nav_bar' %>

<body>

<p id="notice"><%= notice %></p>

<center><h1><%= @item.name %></h1>

<p><div class="pic">
  <%= image_tag @item.image_url.blank? ? ("http://www.drivenmavens.com/wp-content/uploads/Blank-page.jpg") : @item.image_url, :width => 400, :height => 400, :crop => :fill %>
</div></p>

<% if user_signed_in? %>
  <% if can? :crud, @item %>
    <center><%= link_to 'Edit', edit_item_path(@item) %></center>
  <% end %>
<% end %>

<ul class="iteminfo">
	<li><strong>Item Condition:</strong><br>
	<%= @item.condition %></li>

	<li><strong>Description:</strong><br>
	<%= @item.description %></li>

	<li><strong>Price: </strong><br>
	$<%= @item.price %></li>

	<li><strong>Seller:</strong><br>
	<%= link_to @item.user.name.blank? ? @item.user.email : @item.user.name, user_path(@item.user.name) %>
</p>

<center><button class="buy">BUY</button></center>

<center><%= link_to 'Go Back', items_path %></center>




</body>


