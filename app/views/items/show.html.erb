<head>
	<style>
		body h1 { font-family: "Oswald", sans-serif; text-transform: uppercase; }
		.pic { padding-left: 10%; float: left; padding-right: 10px; }
		.iteminfo li { list-style: none; display: block; }
		.buy { padding: 5px; }
		body { background-color: rgba(52, 152, 219, .5) }
		.itembox { border-radius: 25px; border: 2px solid #3498db;
			   width: 750px; height: 600px; position: absolute;
			   top:0; bottom:0; left:0; right:0; margin: auto}
	</style>
</head>

<%= render 'shared/nav_bar' %>

<body>

<p id="notice"><%= notice %></p>

<!-- This div is the box containing the item elements -->
<div class="itembox">

<center><h1><%= @item.name %></h1>

<p><div class="pic">
  <%= image_tag @item.image_url.blank? ? ("http://www.drivenmavens.com/wp-content/uploads/Blank-page.jpg") : @item.image_url, :width => 400, :height => 400, :crop => :fill %>
</div></p>

<% if user_signed_in? %>
  <% if can? :crud, @item %>
    <center><%= link_to 'Edit', edit_item_path(@item) %><br></center>
  <% end %>
<% end %>																																																																																																																																																																																																																																																																																																																																																				

<ul class="iteminfo">
	<li><strong>Item Condition:</strong><br>
	<%= @item.condition %><br></li>

	<li><strong>Description:</strong><br>
	<%= @item.description %><br></li>

	<li><strong>Price: </strong><br>																																																																																																																																																																																																																																																				
	$<%= @item.price %><br></li>

	<li><strong>Seller:</strong><br>
	<%= link_to @item.user.name.blank? ? @item.user.email : @item.user.name, user_path(@item.user) %><br></li>

	<li><strong>Tags:</strong><br>
	<%= raw tag_links(@item.all_tags) %><br></li>
</ul>

<center><button class="buy">BUY</button><br></center>

<center><%= link_to 'Go Back', items_path %></center>

</div>


</body>


