<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, autofocus: true %><br>
    
    <%= f.label :condition %><br>
    <%= f.text_field :condition, autofocus: true %><br>
    
    <%= f.label :description %><br>
    <%= f.text_area :description %><br>

    <%= f.label :image_url %><br>
    <%= f.text_field :image_url, autofocus: true %><br>

    <%= f.label :price %><br>
    <%= f.number_field :price, autofocus: true %><br>
    
    <%= f.text_field :all_tags, placeholder:"Tags separated with comma." %>
    
  </div>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
