<head>
	<style>
		.products li { display: inline-block; width: 400px; vertical-align:top; }
		.products h1, h4 { font-family: "Oswald", sans-serif; text-align: center; }
		.products p { text-align: center; }
	</style>
</head>

<%= render 'shared/nav_bar' %>
<center><h1>For Sale</h1></center>

<% if user_signed_in? %>
  <center><%= link_to new_item_path, :method => :get do %>
		<button>New Item</button>
	  <% end %>
  </center>
<% end %>

<center><ul class="products">
<% @items.each do |item| %>
	<li>
		<p><%= image_tag item.image_url.blank? ? ("http://www.drivenmavens.com/wp-content/uploads/Blank-page.jpg") : item.image_url, :width => 300, :height => 300, :crop => :fill %></p>
		<h4><%= item.name %></h4>
		<p>$<%= item.price %></p>
		<p><%= link_to 'Details', item %></p>
		<p><%= raw tag_links(item.all_tags) %></p>
	</li>
<% end %>
</ul></center>

