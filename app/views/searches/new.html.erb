<head>
	<style>
		h1 { font-family: "Oswald", sans-serif; text-align: center; }
      		.searchbox { border-radius: 25px; border: 2px solid #3498db; background: #FFFFFF;
                           width: 500px; height: 570px; position: absolute;
                           top:0; bottom:0; left:0; right:0; margin: auto}      
	</style>
</head>

<%= render 'shared/nav_bar' %>

<div class="searchbox">
<h1>Advanced Search</h1>

<%= form_for(@search) do |f| %>
  <p>
    <%= f.label "Item Name" %><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :condition %><br />
    <%= f.select :condition, [['-', ''], ['Fair', 'Fair'], ['Used', 'Used'], ['Good', 'Good'], ['New', 'New']], autofocus: true %><br>
  </p>

  <p>
    <%= f.label :category %><br />
    <%= f.select :category, [['-', ''],['Miscellaneous', 'Miscellaneous'], ['Clothes', 'Clothes'], ['Textbooks', 'Textbooks'], ['Furniture', 'Furniture']], autofocus: true %>
  </p>

  <p>
    Price Range<br />
    <%= f.text_field :minimum_price, :size => 7 %> -
    <%= f.text_field :maximum_price, :size => 7 %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
</div>

