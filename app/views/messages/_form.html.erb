<%= form_for(@message) do |f| %>
  <% if @message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@message.errors.count, "error") %> prohibited this message from being sent:</h2>

      <ul>
      <% @message.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :subject %><br>
    <%= f.text_field :subject, autofocus: true, placeholder: '' %><br>
    
    <%= f.label :body %><br>
    <%= f.text_area :body, cols: 20, rows: 40, autofocus: true, placeholder: '' %><br>

  </div>
  <%= f.hidden_field :recipient_id, :value => @message.user_id %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
