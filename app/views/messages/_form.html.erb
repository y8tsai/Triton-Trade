<%= form_for(@message) do |f| %>
  <% if @message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@message.errors.count, "error") %> prohibited this message from being sent:</h2>

      <ul>
      <% @message.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, autofocus: true %><br>
    
    <%= f.label :condition %><br>
    <%= f.select :condition, [['Fair', 'Fair'], ['Used', 'Used'], ['Good', 'Good'], ['New', 'New']], autofocus: true %><br>
    
    <%= f.label :description %><br>
    <%= f.text_area :description %><br>

    <%= f.label :image_url %><br>
    <%= f.text_field :image_url, autofocus: true %><br>

    <%= f.label :price %><br>
    <%= f.number_field :price, :class => 'text_field', :step => 'any', autofocus: true %><br>

    <%= f.label :all_tags %><br>
    <%= f.text_field :all_tags, placeholder: "Tags separated with ," %><br>
    
  </div>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
